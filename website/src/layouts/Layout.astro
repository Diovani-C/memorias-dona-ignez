---
import "../styles/global.css";
const { pathname } = Astro.url;
import { fade } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
}

const { title, description, image } = Astro.props;

const navLinks = [
  { href: "/", text: "Início" },
  { href: "/gallery/", text: "Galeria" },
  { href: "/about/", text: "Sobre" },
];

// Base classes for all links
const baseLinkClasses = "hover:text-gray-900 hover:underline";

const activeLinkClasses = "text-gray-900 underline font-semibold";

function isActive(linkHref: string) {
  // Handle the homepage link
  if (linkHref === "/") {
    return pathname === "/";
  }
  // Handle other links
  return pathname.startsWith(linkHref);
}
---

<html lang="pt-BR" class="scroll-smooth scroll-pt-24" transition:name="root" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={Astro.url.href} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image.src} />

    <meta property="og:image:alt" content={description} />
    <meta property="og:image:width" content={image.width.toString()} />
    <meta property="og:image:height" content={image.height.toString()} />

    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:site_name" content="Memorias Dona Ignez" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image.src} />
    <meta name="twitter:image:alt" content={description} />

    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ImageGallery",
        "name": "Memorias Dona Ignez",
        "description": "Uma homenagem carinhosa à vida e ao legado da minha amada avó, um espaço para manter sua história sempre viva.",
        "url": "https://memoriasdonaignez.com",

        "about": {
          "@type": "Person",
          "name": "Ignez Dariva",
          "birthDate": "1938-06-29",
          "deathDate": "2025-09-29"
        }
      }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style is:global>
      /* Configurações de fontes e cores personalizadas */
      :root {
        --font-title: "Playfair Display", serif;
        --font-body: "Montserrat", sans-serif;
        --color-cream: #fdf8f0;
        --color-text: #4e4a47;
        --color-sepia-light: #d9c6b5;
        --color-gold-pale: #c4a484;
      }

      body {
        font-family: var(--font-body);
        background-color: var(--color-cream);
        color: var(--color-text);
      }

      h1,
      h2,
      h3,
      .font-title {
        font-family: var(--font-title);
      }

      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body class="antialiased">
    <header class="p-4 md:p-6 w-full sticky top-0 backdrop-blur-sm z-30">
      <div class="flex justify-between items-center max-w-5xl mx-auto">
        <h1
          class="text-2xl md:text-3xl font-bold font-title"
          style="color: var(--color-gold-pale);"
        >
          Ignez
        </h1>
        <nav>
          <ul class="flex space-x-4 md:space-x-8 text-sm md:text-base">
            {
              /* Loop through each navigation link */
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class:list={[
                      baseLinkClasses,
                      // This is the magic:
                      // It adds `activeLinkClasses` *only if* isActive(link.href) is true
                      { [activeLinkClasses]: isActive(link.href) },
                    ]}
                    data-astro-prefetch
                  >
                    {link.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>
    </header>
    <main class="p-4 md:p-6 max-w-5xl mx-auto min-h-[85dvh]" transition:animate={fade({ duration: "0.6s" })}>
      <slot />
    </main>
    <footer
      class="text-center p-8 mt-12 border-t"
      style="border-color: var(--color-sepia-light);"
    >
      <p class="text-sm mb-2" style="color: var(--color-text);">
        Este memorial foi criado com amor por seu neto, Diovani Eduardo Coelli,
        em homenagem à sua vida, sua história e para que suas memórias nunca se
        percam.
      </p>
      <a
        href="https://github.com/Diovani-C/memorias-dona-ignez"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm hover:underline"
        style="color: var(--color-gold-pale);"
      >
        Ver o projeto no GitHub
      </a>
    </footer>
  </body>
</html>
